{
  "manifest_version": 3,
  "name": "Better Portal Extension",
  "version": "1.1",
  "description": "Make the portal easier to use.",
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://portal.it-chiba.ac.jp/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/close-icon.png"],
      "matches": ["https://portal.it-chiba.ac.jp/*"]
    }
  ]
}